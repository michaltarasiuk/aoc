{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "esnext",
    "module": "nodenext",
    "moduleDetection": "force",
    "moduleResolution": "nodenext",
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "paths": {
      "#lib/*": ["./lib/*"]
    }
  }
}
